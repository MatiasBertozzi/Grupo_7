<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="/Grupo_7/myApp/public/images/logo-mercado-liebre.jpg" />
	
	<title> Mercado Liebre Argentina</title>
			<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="stylesheets/app.css">
</head>
<!-- preguntar acerca de la imagen del banner por el tema del css (css:156) media querys -->

<body>
	<!-- Header -->
	 <% if (locals.userLogueado != undefined ) { %>
		<%- include('partials/headerLogueado') %>
		<% } else { %>
		<%- include('partials/header') %>
	 <% } %>
	
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="images/img-home-banner.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Productos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			 <% for( let i = 0; i < results.length; i++ ) { %>
			 <div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product/id/<%= results[i].id %>">
                        <figure class="product-box_image">
                            <img src="<%= results[i].imagen_producto %>" alt="<%= results[i].nombre_producto %>">
                        </figure>
                        <article class="product-box_data">
                            <h2><%= results[i].nombre_producto %></h2>
                            <p><%= results[i].descripcion_producto %></p>
							<p>Creado por: <%= results[i].user.usuario %></p>
                            <p>Comentarios: Completar</p>
                        </article>
                    </a>
				</section>
			</div>
		<% } %>
		</div>
	</div>


	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	

</html>